@model ApplicationType

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-danger">Delete Application Type</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <div class="row">
                <div class="col-8 offset-4">
                    <button type="submit" class="btn btn-danger" style="width:150px" onclick="return confirm('Вы уверены, что хотите удалить этот тип приложения?')">Удалить</button>
                    <a asp-action="Index" class="btn btn-secondary" style="width:150px">
                        <i class="bi bi-backspace-fill"></i>
                        Назад
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>
