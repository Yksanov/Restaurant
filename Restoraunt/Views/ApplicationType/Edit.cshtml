@model ApplicationType

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info">Edit Application Type</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-info" style="width:150px">Сохранить</button>
            <a asp-controller="ApplicationType" asp-action="Index" class="btn btn-secondary" style="width:150px">
                <i class="bi bi-backspace-fill"></i>
                Назад
            </a>
        </div>
    </div>
</form>
